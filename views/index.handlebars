<div class="container">
    <div class="row">
        <div class="col-md-4 col-sm-4 col-md-offset-4 col-sm-offset-4">
            <div class="row">
                <img src="assets/img/burger.png" alt="Eat-Da-Burger Logo" id="burger-img">
            </div>
            <div class="row">
                <h1>Eat-Da-Burger!</h1>
            </div>
            <div class="row">
                <div class="col-md-6 burger-add">

                    {{#each burgers}}
                        {{#unless this.devour}}
                            <div class="panel panel-default">
                                <div class="panel-body">
                                    {{this.name}}
                                </div>
                            </div>
                            <form action="/{{this.id}}?_method=PUT" method="POST">
                                <input type="hidden" name="devour" value="true">
                                <button type="submit">Devour It!</button>
                            </form>
                        {{/unless}}
                    {{/each}}

                </div>

                <div class="col-md-6 burger-del">




                </div>
            </div>
            <div class="row">
                <textarea id="burger-input"></textarea>
            </div>
            <div class="row">
                <button type="button" class="btn btn-primary">Submit</button>
            </div>
            <div class="row">
                <p id="instructions">Enter a burger you want to eat. Click the "Submit" button.</p>
            </div>
        </div>
    </div>
</div>